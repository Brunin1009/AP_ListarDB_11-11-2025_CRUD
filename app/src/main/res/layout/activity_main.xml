<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F0"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Título de la pantalla -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gestion_roles"
            android:textSize="32sp"
            android:textColor="#7A1A1A"
            android:fontFamily="serif"
            android:letterSpacing="0.05"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card contenedor para los campos de entrada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFormulario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#D4AF37"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo de nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombreRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_nombre_rol"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#7A1A1A"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#7A1A1A"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNombreRol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textColor="#2C2C2C"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de descripción -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDescripcionRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_descripcion_rol"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#7A1A1A"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#7A1A1A"
                    app:counterEnabled="true"
                    app:counterMaxLength="200"

                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDescripcionRol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:maxLength="200"
                        android:textColor="#2C2C2C"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de lista -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvListaTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/roles_registrados"
            android:textSize="20sp"
            android:textColor="#7A1A1A"
            android:fontFamily="serif"
            android:letterSpacing="0.03"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardFormulario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Lista de roles con Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLista"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#D4AF37"
            app:layout_constraintTop_toBottomOf="@id/tvListaTitulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón flotante para guardar -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnGuardarRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="@string/guardar_rol"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:letterSpacing="0.05"
        android:textSize="15sp"
        app:backgroundTint="#7A1A1A"
        app:elevation="4dp"
        app:borderWidth="1dp"
        app:rippleColor="#D4AF37" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>